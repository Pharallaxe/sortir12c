{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-start">
            <div class="col-lg-8">
                <div class="card mb-4 shadow-sm">
                    <div class="card-header">
                        <h4 class="my-0 fw-normal">Informations sur la sortie</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">{{ sortie.nom }}</h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Date et heure de la sortie : {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</li>
                            <li>Date limite d'inscription : {{ sortie.dateLimiteInscription|date('d/m/Y H:i') }}</li>
                            <li>Nombre de places : {{ sortie.nbInscriptionsMax }}</li>
                            <li>Durée : {{ sortie.duree }} minutes</li>
                            <li>Description et infos : {{ sortie.infosSortie }}</li>
                            <li>Campus : {{ sortie.campus.nom }}</li>
                            <li>Lieu : {{ sortie.lieu.nom }} - {{ sortie.lieu.rue }}, {{ sortie.lieu.codePostal }}</li>
                            <li>Coordonnées : Latitude {{ sortie.lieu.latitude }}, Longitude {{ sortie.lieu.longitude }}</li>
                        </ul>
                    </div>
                </div>

                <div class="card mb-4 shadow-sm">
                    <div class="card-header">
                        <h4 class="my-0 fw-normal">Participants Inscrits</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Pseudo</th>
                                <th>Nom + Prénom</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for participant in sortie.participants %}
                                <tr>
                                    <td>{{ participant.pseudo }}</td>
                                    <td>{{ participant.nom }} {{ participant.prenom }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
