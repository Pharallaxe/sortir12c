{% extends 'base.html.twig' %}

{% block title %}
    Modifier mon profile
{% endblock %}

{% block body %}
    <div class="container container-profile w-100 m-auto">
        <h2>Modifier mon profil</h2>
        {{ form_start(modifierParticipantForm, {'attr': {'class': 'row g-3'}}) }}

        {% for field in modifierParticipantForm %}
            {% if field.vars.name != 'password' %}
                <div class="mb-3">
                    {{ form_row(field, {'attr': {'class': 'form-control'}}) }}
                </div>
            {% endif %}
        {% endfor %}

        <div class="mb-3">
            {{ form_row(modifierParticipantForm.password.first, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(modifierParticipantForm.password.second, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="d-grid gap-3 d-md-flex justify-content-md-end">
        <a href="{{ path('participant_detailler', {'id' : participant.id}) }}" class="btn btn-primary">Retour</a>
        <button type="submit" class="btn btn-success">Enregistrer</button>
        </div>

        {{ form_end(modifierParticipantForm) }}
    </div>
{% endblock %}
