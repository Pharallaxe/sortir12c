{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h2>Modifier mon profil</h2>
        {{ form_start(modifierParticipantForm, {'attr': {'class': 'row g-3'}}) }}

        {% for field in modifierParticipantForm %}
            {% if field.vars.name != 'password' %}
                <div class="mb-3">
                    {{ form_row(field, {'attr': {'class': 'form-control'}}) }}
                </div>
            {% endif %}
        {% endfor %}

        <div class="mb-3">
            {{ form_row(modifierParticipantForm.password.first, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(modifierParticipantForm.password.second, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-success">Enregistrer</button>

        {{ form_end(modifierParticipantForm) }}
    </div>
{% endblock %}
