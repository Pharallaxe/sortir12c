{% extends 'base.html.twig' %}

{% block body %}
    <h2>{{ participant.pseudo }}</h2>
    <ul>
        <li>Prénom : {{ participant.prenom }}</li>
        <li>Nom : {{ participant.nom }}</li>
        <li>Téléphone :
            {% if participant.telephone is null %}
                non renseigné
            {% else %}
                {{ participant.telephone }}
            {% endif %}</li>
        <li>Email : {{ participant.email }}</li>
        <li>Campus : {{ participant.campus.nom }}</li>
    </ul>
    {% if participantConnecte and participantConnecte.id == participant.id %}
    <a href="{{ path('participant_modifier', {'id' : participant.id}) }}" class="btn btn-success">Modifier</a>
    {% endif %}
{% endblock %}
